<%- include("partials/header") %>

<div class="ui text main container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                
                <div class="item">
                    <div class="image">
                        <img src=" <%= blog["image"] %>">
                    </div>
                            <div class="content">
                                <a class="header" href="/blogs/<%=blog["_id"]%>" ><%= blog["title"] %></a>
                                <div class="meta">
                                    <span> <%= blog["created"].toDateString() %></span>
                                </div>
                                <div class="description">
                                    <span> <%- blog["body"].substring(0, 100) %><% if(blog.body.length > 100){ %>...<%} %></span>    
                                </div>
                                <div class="extra">
                                    <a href="/blogs/<%=blog["_id"]%>" class="ui basic floated violet button">Read More</a>
                                </div>
                            </div>
                </div>

                
                
                
                <% }); %>
        </div>
    </div>
</div>
<%- include("partials/footer") %>